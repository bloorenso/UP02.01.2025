<Window x:Class="UP02._01._2025.EditSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP02._01._2025"
        mc:Ignorable="d"
        Title="EditSupplier" Height="500" Width="400">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1"  Margin="20,0,50,0" VerticalAlignment="Center" Text="Номер сотрудника" FontSize="15" />
        <TextBlock Grid.Row="2" Margin="20,0,50,0" VerticalAlignment="Center" Text="Имя компании" FontSize="15" />
        <TextBlock Grid.Row="3" Margin="20,0,50,0" VerticalAlignment="Center" Text="Контактное лицо" FontSize="15" />
        <TextBlock Grid.Row="4" Margin="20,0,50,0" VerticalAlignment="Center" Text="Номер телефона" FontSize="15" />

        <TextBlock Text="Редактировать поставщика" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontSize="15" />
        <TextBlock x:Name="IdSup" Margin="10,0,20,0" Height="30" Grid.Row="1"  Grid.Column="2" FontSize="15" />
        <TextBox x:Name="NameCompany"  Margin="10,0,20,0" Height="30"   BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="2" FontSize="15" />
        <TextBox x:Name="NameSup"  Margin="10,0,20,0" Height="30" BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="2" FontSize="15"/>
        <TextBox x:Name="PhoneSup"  Margin="10,0,20,0"  Height="30" BorderBrush="Black" BorderThickness="1" Grid.Row="4" Grid.Column="2" FontSize="15"/>
        <Button x:Name="Save" Click="Save_Click" Grid.Row="5" Margin="80,0,0,0" Height="30" Content="Подтвердить"/>
        <Button x:Name="Back" Click="Back_Click" Grid.Row="6" Margin="0,0,80,0" Grid.Column="2" Height="30" Content="Отменить"/>
    </Grid>
</Window>
