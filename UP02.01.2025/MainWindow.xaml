<Window x:Class="UP02._01._2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UP02._01._2025"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <TextBlock Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" FontSize="40" Text="АВТОРИЗАЦИЯ"/>
        </Border>
        <TextBox x:Name="Log" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="50" Background="AliceBlue" TextAlignment="Left" FontSize="25" VerticalContentAlignment="Center" Text="Почта"/>
        <TextBox x:Name="Passwd" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="50" Background="AliceBlue" TextAlignment="Left" FontSize="25" VerticalContentAlignment="Center" Text="Пароль"/>
        <Button x:Name="Auth" Click="Auth_Click" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Background="DodgerBlue" Foreground="AntiqueWhite" Height="40" FontSize="25" Content="Войти" FontFamily="Baskerville Old Face"/>
    </Grid>
</Window>